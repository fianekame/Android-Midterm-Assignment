<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Oper.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/btnhuruf</item>
        <item name="android:textColor">@color/primarytext</item>
    </style>

    <style name="Angka.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/btnangka</item>
        <item name="android:textColor">@color/primarytext</item>
    </style>

</resources>
