<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    android:paddingLeft="19dp"
    android:paddingTop="10dp"
    tools:context="com.example.fianxeka.tescalc.MainActivity">

    <TextView
        android:id="@+id/txFor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:text="Formula : "
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/formula"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/txFor"
        android:text=""
        android:textSize="15sp" />

    <TextView
        android:id="@+id/txtResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/plus"
        android:layout_alignRight="@+id/plus"
        android:layout_below="@+id/formula"
        android:gravity="right"
        android:padding="5dp"
        android:text=""
        android:textSize="55sp" />

    <Button
        android:id="@+id/nol"
        android:layout_width="@dimen/lbtnsmall"
        android:layout_height="@dimen/lbtnsmall"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:onClick="btnCLick"
        android:text="0"
        android:theme="@style/Angka.Button" />


    <Button
        android:id="@+id/satu"
        android:layout_width="@dimen/lbtnsmall"
        android:layout_height="@dimen/lbtnsmall"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/nol"
        android:onClick="btnCLick"
        android:text="1"
        android:theme="@style/Angka.Button" />

    <Button
        android:id="@+id/dua"
        android:layout_width="@dimen/lbtnsmall"
        android:layout_height="@dimen/lbtnsmall"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/satu"
        android:onClick="btnCLick"
        android:text="2"
        android:theme="@style/Angka.Button" />

    <Button
        android:id="@+id/tiga"
        android:layout_width="@dimen/lbtnsmall"
        android:layout_height="@dimen/lbtnsmall"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/dua"
        android:onClick="btnCLick"
        android:text="3"
        android:theme="@style/Angka.Button" />

    <Button
        android:id="@+id/empat"
        android:layout_width="@dimen/lbtnsmall"
        android:layout_height="@dimen/lbtnsmall"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/tiga"
        android:onClick="btnCLick"
        android:text="4"
        android:theme="@style/Angka.Button" />

    <Button
        android:id="@+id/lima"
        android:layout_width="@dimen/lbtnsmall"
        android:layout_height="@dimen/lbtnsmall"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/empat"
        android:onClick="btnCLick"
        android:text="5"
        android:theme="@style/Angka.Button" />

    <Button
        android:id="@+id/enam"
        android:layout_width="@dimen/lbtnsmall"
        android:layout_height="@dimen/lbtnsmall"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/lima"
        android:onClick="btnCLick"
        android:text="6"
        android:theme="@style/Angka.Button" />

    <Button
        android:id="@+id/tujuh"
        android:layout_width="@dimen/lbtnsmall"
        android:layout_height="@dimen/lbtnsmall"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/enam"
        android:onClick="btnCLick"
        android:text="7"
        android:theme="@style/Angka.Button" />

    <Button
        android:id="@+id/delapan"
        android:layout_width="@dimen/lbtnsmall"
        android:layout_height="@dimen/lbtnsmall"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/tujuh"
        android:onClick="btnCLick"
        android:text="8"
        android:theme="@style/Angka.Button" />

    <Button
        android:id="@+id/sembilan"
        android:layout_width="@dimen/lbtnsmall"
        android:layout_height="@dimen/lbtnsmall"
        android:layout_above="@+id/nol"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/delapan"
        android:onClick="btnCLick"
        android:text="9"
        android:theme="@style/Angka.Button" />

    <Button
        android:id="@+id/hurufA"
        android:layout_width="@dimen/lbtnsmall"
        android:layout_height="@dimen/lbtnsmall"
        android:layout_above="@+id/enam"
        android:layout_alignParentLeft="true"
        android:onClick="btnCLick"
        android:text="A"
        android:theme="@style/Oper.Button" />

    <Button
        android:id="@+id/hurufB"
        android:layout_width="@dimen/lbtnsmall"
        android:layout_height="@dimen/lbtnsmall"
        android:layout_above="@+id/enam"
        android:layout_toRightOf="@+id/hurufA"
        android:onClick="btnCLick"
        android:text="B"
        android:theme="@style/Oper.Button" />

    <Button
        android:id="@+id/hurufC"
        android:layout_width="@dimen/lbtnsmall"
        android:layout_height="@dimen/lbtnsmall"
        android:layout_above="@+id/enam"
        android:layout_toRightOf="@+id/hurufB"
        android:onClick="btnCLick"
        android:text="C"
        android:theme="@style/Oper.Button" />

    <Button
        android:id="@+id/plus"
        android:layout_width="@dimen/lbtnbig"
        android:layout_height="@dimen/lbtnsmall"
        android:layout_above="@+id/tujuh"
        android:layout_toRightOf="@+id/minus"
        android:onClick="btnCLick"
        android:text="+"
        android:theme="@style/AppTheme.Button" />

    <Button
        android:id="@+id/hurufD"
        android:layout_width="@dimen/lbtnsmall"
        android:layout_height="@dimen/lbtnsmall"
        android:layout_above="@+id/nol"
        android:layout_toRightOf="@+id/hurufC"
        android:onClick="btnCLick"
        android:text="D"
        android:theme="@style/Oper.Button" />

    <Button
        android:id="@+id/hurufE"
        android:layout_width="@dimen/lbtnsmall"
        android:layout_height="@dimen/lbtnsmall"
        android:layout_above="@+id/nol"
        android:layout_toRightOf="@+id/hurufD"
        android:onClick="btnCLick"
        android:text="E"
        android:theme="@style/Oper.Button" />

    <Button
        android:id="@+id/kali"
        android:layout_width="@dimen/lbtnsmall"
        android:layout_height="@dimen/lbtnsmall"
        android:layout_above="@+id/nol"
        android:layout_toRightOf="@+id/hurufE"
        android:onClick="btnCLick"
        android:text="X"
        android:theme="@style/AppTheme.Button" />

    <Button
        android:id="@+id/bagi"
        android:layout_width="@dimen/lbtnsmall"
        android:layout_height="@dimen/lbtnsmall"
        android:layout_above="@+id/nol"
        android:layout_toRightOf="@+id/kali"
        android:onClick="btnCLick"
        android:text=":"
        android:theme="@style/AppTheme.Button" />

    <Button
        android:id="@+id/minus"
        android:layout_width="@dimen/lbtnsmall"
        android:layout_height="@dimen/lbtnsmall"
        android:layout_above="@+id/nol"
        android:layout_toRightOf="@+id/bagi"
        android:onClick="btnCLick"
        android:text="-"
        android:theme="@style/AppTheme.Button" />

    <Button
        android:id="@+id/hurufF"
        android:layout_width="@dimen/lbtnsmall"
        android:layout_height="@dimen/lbtnsmall"
        android:layout_above="@+id/hurufD"
        android:layout_toRightOf="@+id/clear"
        android:onClick="btnCLick"
        android:text="F"
        android:theme="@style/Oper.Button" />

    <Button
        android:id="@+id/hurufG"
        android:layout_width="@dimen/lbtnsmall"
        android:layout_height="@dimen/lbtnsmall"
        android:layout_above="@+id/hurufD"
        android:layout_toRightOf="@+id/hurufF"
        android:onClick="btnCLick"
        android:text="G"
        android:theme="@style/Oper.Button" />

    <Button
        android:id="@+id/hurufH"
        android:layout_width="@dimen/lbtnsmall"
        android:layout_height="@dimen/lbtnsmall"
        android:layout_above="@+id/hurufD"
        android:layout_toRightOf="@+id/hurufG"
        android:onClick="btnCLick"
        android:text="H"
        android:theme="@style/Oper.Button" />

    <Button
        android:id="@+id/equal"
        android:layout_width="300dp"
        android:layout_height="@dimen/lbtnsmall"
        android:layout_above="@+id/hurufD"
        android:layout_toRightOf="@+id/hurufE"
        android:onClick="btnCLick"
        android:text="="
        android:theme="@style/AppTheme.Button" />

    <Button
        android:id="@+id/clear"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="@dimen/lbtnbig"
        android:layout_height="@dimen/lbtnsmall"
        android:layout_above="@+id/hurufA"
        android:layout_alignParentLeft="true"
        android:onClick="btnCLick"
        android:text="CLEAR" />


    <!--<TextView-->
    <!--android:id="@+id/result"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content" -->
    <!--android:gravity="center"-->
    <!--android:textSize="17dp"-->
    <!--android:layout_below="@+id/formula"-->
    <!--android:text="1x2x3x4x7-1"/>-->


</RelativeLayout>
